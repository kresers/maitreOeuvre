{% extends "MaitreOeuvreBundle::layout.html.twig" %}

{% block contents %}
    {{ parent()}}
    {% block body %}
        {{ parent()}}
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

        {# Les erreurs générales du formulaire. #}
        {{ form_errors(form) }}


        <div class="form-group">
            {{ form_label(form.numPermis, "Numéro de permis", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            {{ form_errors(form.numPermis) }}
            <div class="col-sm-6">
                {{ form_widget(form.numPermis, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.ville, "Ville", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            {{ form_errors(form.ville) }}
            <div class="col-sm-6">
                {{ form_widget(form.ville, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>


        <div class="form-group">
            {{ form_label(form.rue, "Rue", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            {{ form_errors(form.rue) }}
            <div class="col-sm-6">
                {{ form_widget(form.rue, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.cp, "Code postal", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            {{ form_errors(form.cp) }}
            <div class="col-sm-6">
                {{ form_widget(form.cp, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.etat, "Pays", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            {{ form_errors(form.etat) }}
            <div class="col-sm-6">
                {{ form_widget(form.etat, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.id, "Client", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            {{ form_errors(form.id) }}
            <div class="col-sm-6">
                {{ form_widget(form.id, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>



        {{ form_rest(form) }}
        {{form_end(form)}}

        {# Fermeture de la balise <form> du formulaire HTML #}

    {% endblock %}

{% endblock %}

{% block javascript %}

    <script>
        $(document).ready(function() {
            $('.js-datepicker').datepicker({
                format: 'yyyy-mm-dd'
            });
        });
    </script>

{% endblock %}
