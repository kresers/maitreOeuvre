{% extends "MaitreOeuvreBundle::layout.html.twig" %}

{% block contents %}
    {{ parent() }}
    {% block body %}
        {{ parent() }}


        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

        {# Les erreurs générales du formulaire. #}
        {{ form_errors(form) }}

        {# design pour l'input "Prénom" #}
        <div class="form-group">
