{% extends "MaitreOeuvreBundle::layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}



{% block contents %}
    {{ parent() }}

    {% block body %}

        {{ parent() }}

        <div class="container">
            <center><h3 class="">Gestion d'une étape</h3></center>

                <div class="well container widthForm">


                    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}


                    {{ form_errors(form) }}

                    <div class="form-group">

                        {{ form_label(form.intitule, "Intitulé *", {'label_attr': {'class': ' required col-sm-3 control-label'}}) }}

                        {{ form_errors(form.intitule) }}

                        <div class="col-sm-9">

                            {{ form_widget(form.intitule, {'attr': {'class': 'form-control'}}) }}

                        </div>

                    </div>

                    <div class="form-group">

                        {{ form_label(form.chantier, "Chantier *", {'label_attr': {'class': ' required col-sm-3 control-label'}}) }}

                        {{ form_errors(form.chantier) }}

                        <div class="col-sm-9">

                            {{ form_widget(form.chantier, {'attr': {'class': 'form-control'}}) }}

                        </div>

                    </div>

                    <div class="form-group">

                        {{ form_label(form.specialite, "Spécialité *", {'label_attr': {'class': ' required col-sm-3 control-label'}}) }}

                        {{ form_errors(form.specialite) }}

                        <div class="col-sm-9">

                            {{ form_widget(form.specialite, {'attr': {'class': 'form-control'}}) }}

                        </div>

                    </div>



                    <div class="form-group">

                        {{ form_label(form.dateDeb, "Date début", {'label_attr': {'class': ' required col-sm-3 control-label'}}) }}

                        {{ form_errors(form.dateDeb) }}

                        <div class="col-sm-9">

                            {{ form_widget(form.dateDeb, {'attr': {'class': 'etape-input'}}) }}

                        </div>

                    </div>

                    <div class="form-group">

                        {{ form_label(form.dateFin, "Date Fin", {'label_attr': {'class': ' required col-sm-3 control-label'}}) }}

                        {{ form_errors(form.dateFin) }}

                        <div class="col-sm-9">

                            {{ form_widget(form.dateFin, {'attr': {'class': 'etape-input'}}) }}

                        </div>

                    </div>

                    <div class="form-group text-center">

                        {{ form_widget(form.ajout, {'attr': {'class': 'btn btn-success'}}) }}
                    </div>
                    {{ form_end(form) }}

                </div>

            </div>

    {% endblock %}

{% endblock %}


{% block javascripts %}
    {{ parent() }}



{% endblock %}